<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item
        android:state_pressed="true"
        android:top="2dp">
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#de8b8b" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <!-- default state -->
    <item>
        <layer-list>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E6E6E6"/>
                    <corners android:radius="5dp"/>
                </shape>
                <stroke
                    android:width="2dp"
                    android:color="#BBB" />
            </item>

            <item android:bottom="2dp">
                <shape>
                    <gradient
                        android:startColor="@android:color/white"
                        android:endColor="#E6E6E6"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#de8b8b" />
                    <corners
                        android:radius="4dp" />
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>