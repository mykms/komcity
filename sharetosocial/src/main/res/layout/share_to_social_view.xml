<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/group_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgInstagram"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:contentDescription="Instagram"
            android:src="@drawable/vector_ic_instagram" />

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:contentDescription="Facebook"
            android:src="@drawable/vector_ic_facebook" />

        <ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:contentDescription="Twitter"
            android:src="@drawable/vector_ic_twitter" />

        <ImageView
            android:id="@+id/imgVkontakte"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:contentDescription="Vkontakte"
            android:src="@drawable/vector_ic_vk" />

        <LinearLayout
            android:id="@+id/groupMessenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgWhatsapp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:contentDescription="WhatsApp"
                android:src="@drawable/vector_ic_whatsapp" />

            <ImageView
                android:id="@+id/imgTelegram"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:contentDescription="Telegram"
                android:src="@drawable/vector_ic_telegram" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/group_icons"
        android:layout_toRightOf="@+id/group_icons"
        android:contentDescription="@string/app_name"
        android:src="@drawable/vector_ic_arrow_back" />
</RelativeLayout>